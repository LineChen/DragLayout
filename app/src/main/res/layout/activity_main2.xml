<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="2000dp"
                      android:orientation="vertical">
            <TextView android:layout_width="match_parent" android:layout_height="800dp"
                      android:gravity="center"
                      android:background="#990"/>
            <Button android:layout_width="match_parent" android:layout_height="400dp"
                    android:text="可点击"/>
            <TextView android:layout_width="match_parent" android:layout_height="800dp"
                      android:gravity="center"
                      android:background="#990"/>

        </LinearLayout>

    </ScrollView>

    <com.line.flowlayout.FlowLayout
            android:id="@+id/flow_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            app:fl_stickyEdge="none"
            app:fl_marginLeft="-30"
            app:fl_marginRight="-10"
            app:fl_marginTop="-50"
            app:fl_marginBottom="-50">

        <TextView
                android:id="@+id/image"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_gravity="center"
                android:background="#be0"
                android:gravity="center"
                android:textColor="#fff"/>


    </com.line.flowlayout.FlowLayout>


</FrameLayout>